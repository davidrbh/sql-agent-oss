# ============================================
# CREDENCIALES DEL LLM
# ============================================
GOOGLE_API_KEY=your_google_ai_key_here
DEEPSEEK_API_KEY=your_deepseek_key_here

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# ============================================

# Driver para SQLAlchemy (aiomysql para async, pymysql para sync)
DB_DRIVER=aiomysql

# Credenciales de conexión
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_database_name
DB_USER=root
DB_PASSWORD=your_password

# ============================================
# CONFIGURACIÓN DEL POOL DE CONEXIONES
# ============================================

# Tamaño del pool de conexiones (optimizar según tu carga)
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600  # Reciclar conexiones cada hora (segundos)

# Logging de SQL (útil para debugging, desactivar en producción)
SQL_ECHO=false

# ============================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================

# Timeout de conexión (segundos)
DB_CONNECT_TIMEOUT=30
DB_READ_TIMEOUT=30
DB_WRITE_TIMEOUT=30

# SSL (activar si tu MySQL soporta SSL)
DB_USE_SSL=false
# DB_SSL_CA=/path/to/ca.pem
# DB_SSL_CERT=/path/to/client-cert.pem
# DB_SSL_KEY=/path/to/client-key.pem

# ============================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ============================================

# Nivel de log
LOG_LEVEL=INFO
DEBUG_MODE=True

# ============================================
# CONFIGURACIÓN DE LA API EXTERNA
# ============================================
API_BASE_URL="https://api.example.com"

# Configuración Agnostica
API_AUTH_HEADER="x-api-key"
API_AUTH_VALUE="your_api_key_value_here"
